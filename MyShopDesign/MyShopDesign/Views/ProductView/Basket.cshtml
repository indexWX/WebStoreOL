
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script src="~/Scripts/jquery-1.11.min.js"></script>
    <script src="~/Scripts/etao.js"></script>
    <script src="~/Scripts/cart.js"></script>
    <link href="~/Content/cart.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="container">
    <div class="row hidden-print">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="<%=application.getContextPath()%>">首页</a></li>
                <li class="active">查看购物车</li>
            </ol>
        </div>
    </div>
    <div class="cart-wrap">
        <table id="cartTable" class="cart table table-condensed">
            <thead>
                <tr>
                    <th class="t-checkbox"><label><input class="check-all check" type="checkbox" />全选</label></th>
                    <th class="t-goods text-center"><label>商品信息</label></th>
                    <th class="text-left"></th>
                    <th class="t-selling-price text-center"><label>商品单价</label></th>
                    <th class="t-qty text-center"><label>购买数量</label></th>
                    <th class="t-subtotal text-center"><label>金额小计</label></th>
                    <th class="t-action"><label>操作</label></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="goods"><label> <input type="checkbox" class="check-one check" /></label></td>
                    <td colspan="2" class="goods text-left">
                        <img src="~/Content/images/1.JPG" />   Item1
                    </td>

                    <td class="selling-price number small-bold-red text-center"
                        style="padding-top: 1.1rem;" data-bind="76.55">
                        76.55
                    </td>
                    <td>
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon minus">-</span> <input type="text" class="number form-control input-sm text-center" value="2" />
                            <span class="input-group-addon plus">+</span>
                        </div>
                    </td>
                    <td class="subtotal number small-bold-red text-center" style="padding-top: 1.1rem;"></td>
                    <td class="action" style="padding-top: 1.1rem;"><span class="delete btn btn-xs btn-warning">删除</span></td>
                </tr>
                <tr>
                    <td class="goods">
                        <label>
                            <input type="checkbox" class="check-one check " />
                        </label>
                    </td>
                    <td colspan="2" class="goods text-left">
                        <img src="~/Content/images/1.JPG" />   Item2
                    </td>
                    <td class="selling-price number small-bold-red text-center"
                        style="padding-top: 1.1rem;" data-bind="1100">
                        1100
                    </td>
                    <td>
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon minus">-</span> <input type="text" class="number form-control input-sm text-center" value="3" />
                            <span class="input-group-addon plus">+</span>
                        </div>
                    </td>
                    <td class="subtotal number small-bold-red text-center"
                        style="padding-top: 1.1rem;"></td>
                    <td class="action" style="padding-top: 1.1rem;">
                        <span class="delete btn btn-xs btn-warning">删除</span>
                    </td>
                </tr>
                <tr>
                    <td class="goods">
                        <label>
                            <input type="checkbox" class="check-one check" />
                        </label>
                    </td>
                    <td colspan="2" class="goods text-left">
                        <img src="~/Content/images/1.JPG" />   Item3
                    </td>
                    <td class="selling-price number small-bold-red text-center"
                        style="padding-top: 1.1rem;" data-bind="1200">
                        1200
                    </td>
                    <td>
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon minus">-</span> <input type="text" class="number form-control input-sm text-center" value="6" />
                            <span class="input-group-addon plus">+</span>
                        </div>
                    </td>
                    <td class="subtotal number small-bold-red text-center"
                        style="padding-top: 1.1rem;"></td>
                    <td class="action" style="padding-top: 1.1rem;">
                        <span class="delete btn btn-xs btn-warning">删除</span>
                    </td>
                </tr>
                <tr>
                    <td class="goods">
                        <label>
                            <input type="checkbox" class="check-one check" />
                        </label>
                    </td>
                    <td colspan="2" class="goods text-left">
                        <img src="~/Content/images/1.JPG" />   Item4
                    </td>
                    <td class="selling-price number small-bold-red text-center"
                        style="padding-top: 1.1rem;" data-bind="1400">
                        1400
                    </td>
                    <td>
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon minus">-</span> <input type="text" class="number form-control input-sm text-center" value="8" />
                            <span class="input-group-addon plus">+</span>
                        </div>
                    </td>
                    <td class="subtotal number small-bold-red text-center"></td>
                    <td class="action" style="padding-top: 1.1rem;">
                        <span class="delete btn btn-xs btn-warning">删除</span>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="cart-summary">
                    <div style="margin-left: 2rem;" class="pull-right">
                        <a href="confirmation.html"
                           id="btn_settlement" type="button" class="btn btn-primary" disabled>去结算</a>
                    </div>
                    <div style="margin-left: 1rem; margin-top: 0.4rem;" class="pull-right total">
                        <label>金额合计:<span id="priceTotal" class="price-total large-bold-red">0.00</span></label>
                    </div>
                    <div style="margin-top: 4px;" class="pull-right">
                        <label>
                            您选择了<span id="itemCount" class="large-bold-red" style="margin: 0 4px;"></span>件商品，共计<span id="qtyCount" class="large-bold-red" style="margin: 0 4px;"></span>件
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


